{
  "version": 2,
  "builds": [
    {
      "src": "FRONTEND/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "BACKEND/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/BACKEND/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/FRONTEND/build/$1"
    }
  ]
}
